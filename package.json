{
  "name": "test-m18",
  "version": "1.0.0",
  "description": "Тестовое задание M18",
  "devDependencies": {
    "autoprefixer": "10.2.x",
    "browser-sync": "2.26.x",
    "del": "6.0.0",
    "eslint": "4.16.0",
    "gulp": "4.0.2",
    "gulp-csso": "4.0.1",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "9.0.x",
    "gulp-posthtml": "3.0.5",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.0.x",
    "gulp-sourcemaps": "3.0.0",
    "pixel-glass": "^1.0.13",
    "posthtml-include": "1.6.2",
    "stylelint": "^13.12.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/",
